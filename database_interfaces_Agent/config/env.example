# Database Interface Agent Environment Configuration
# Copy this file to .env and update with your values

# Application settings
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Session management
SESSION_TTL=3600
MAX_SESSIONS=100

# Security (REQUIRED - Generate your own keys)
ENCRYPTION_KEY=your-32-character-encryption-key-here
SECRET_KEY=your-secret-key-for-sessions-here

# MCP settings
MCP_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3

# Database connection defaults
DEFAULT_POSTGRES_PORT=5432
DEFAULT_MYSQL_PORT=3306

# Redis settings (for session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Connection testing
CONNECTION_TIMEOUT=5
MAX_CONNECTION_POOL_SIZE=10 